# Environment Configuration Template
# Copy this file to .env.local for development

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Local development (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/shikhi_ielts_dev

# For Google Cloud SQL (production)
# DATABASE_URL=postgresql://username:password@/shikhi_ielts_prod?host=/cloudsql/project-id:region:instance-id

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-jwt-key-here-use-crypto-random-bytes
JWT_EXPIRES_IN=24h

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=shikhi-ielts-dev
GOOGLE_CLOUD_REGION=us-central1

# AI Integration
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# EMAIL CONFIGURATION (if using email service)
# =============================================================================
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@shikhi-ielts.com
EMAIL_FROM_NAME=Shikhi IELTS

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# Google Cloud Logging (production)
GOOGLE_CLOUD_LOGGING=false

# =============================================================================
# FRONTEND CONFIGURATION (for CORS and API calls)
# =============================================================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable debug mode
DEBUG=false

# Mock external services for development
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database (separate from development)
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/shikhi_ielts_test

# Test JWT secret (different from production)
TEST_JWT_SECRET=test-jwt-secret-not-for-production

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Health check configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=10000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_EMAIL_VERIFICATION=true
FEATURE_ADMIN_PANEL=true
FEATURE_ANALYTICS=false